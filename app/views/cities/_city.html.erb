<div class="card">
  <div class="card__image">
    <%= link_to image_tag(city.image, class: "card__image"), city_path(city)%>
    <div class="card__city"><%= city.name.titleize %></div>
    <div class="card__country"><%= city.country.titleize %></div>
    <div class="card__price"><%= city.price %></div>
    <div class="card__weather"><%= city.weather %></div>
    <div class="card__internet"><%= city.internet %></div>
  </div>
</div>
