<div class="container">
  <% @cities.each do |city| %>
    <div class="card">
      <div class="card__image">
        <%= link_to image_tag(city.image, width: 200, height: 200), city_path(city) %>
      </div>
      <div class="card__city"><%= city.name %></div>
      <div class="card__weather"><%= city.weather %></div>
      <div class="card__internet"><%= city.internet %></div>
    </div>
  <% end %>
</div>
