<div class="header--city">
  <%= image_tag("header.jpg", class: "header--city__img") %>
  <div class="header--city__name">
    <h2 class="header--city__name--title"><%= @city.name.titleize %></h2>
    <h3 class="header--city__name--subtitle"><%= @city.country.titleize %></h3>
  </div>
  <h3 class="header--city__weather"><%= @city.weather %>
    <i class="fas fa-sun"></i>
  </h3>
  <h3 class="header--city__internet"><%= @city.internet %>
    <i class="fas fa-wifi"></i>
  </h3>
  <h3 class="header--city__cost">$<%= @city.price %>
    <i class="far fa-money-bill-alt"></i>
  </h3>
</div>
